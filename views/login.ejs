<%- include('./includes/first.ejs') %>
<div
  class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14 flex flex-col"
>
  <form action="/login" method="POST">
    <div class="mb-6">
      <label
        for="email"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Your Email</label
      >
      <input
        type="email"
        id="email"
        name="email"
        value="<%= oldInput.email %>"
        class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : 'valid' %>"
        placeholder="john.doe@mail.com"
        required
      />
      <p
        class="mt-2 text-sm text-red-600 dark:text-red-500 <%= validationErrors.find(e => e.path === 'email') ? '' : 'hidden' %>"
      >
        Please enter a valid email address.
      </p>
    </div>
    <div class="mb-6">
      <label
        for="password"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Password</label
      >
      <input
        type="password"
        id="password"
        name="password"
        value="<%= oldInput.password %>"
        class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : 'valid' %>"
        placeholder="•••••••••"
        required
      />
      <p
        class="mt-2 text-sm text-red-600 dark:text-red-500 <%= validationErrors.find(e => e.path === 'password') ? '' : 'hidden' %>"
      >
        Password has to be valid.
      </p>
    </div>
    <div class="grid place-items-center">
      <p
        class="mt-2 text-sm text-red-600 dark:text-red-500 <%= errorMessage ? '' : 'hidden' %>"
      >
        <%= errorMessage %>
      </p>
    </div>
    <button
      type="submit"
      class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 mt-6"
    >
      Login
    </button>
  </form>
</div>
<%- include('./includes/last.ejs') %>
